{# add this at the beginning of your template #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}


    <div class="col-md-4 offset-4">
        <div class="well">
            {{ form_start(form, {'attr': {'class': 'border border-light p-5'}}) }}
            <p class="h4 mb-4 text-center">Sign in</p>
            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control mb-4', 'placeholder': 'Pseudo'}})}}
            {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control mb-4', 'placeholder': 'Mot de passe'}}) }}

            <div class="d-flex justify-content-between">
                <div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                        <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                    </div>
                </div>
                <div>
                    <a href="">Forgot password?</a>
                </div>
            </div>
{#            <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>#}
            {{ form_widget(form.submit,{'attr': {'class': 'btn btn-info btn-block my-4', 'placeholder': 'OK'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

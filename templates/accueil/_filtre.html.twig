{%  block body %}
    <!-- Sidebar Widgets Column -->
    <div class="col-md-3">
        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Filtrer les sorties</h5>
            <div class="card-body">
                <div class="input-group mt-2">
                    <input type="text" class="form-control" placeholder="Le nom contient...">
                </div>
                <label class="mt-2">Entre</label>
                <div class="input-group">
                    <input type="date" class="form-control">
                </div>
                <label class="mt-2">et</label>
                <div class="input-group">
                    <input type="date" class="form-control">
                </div>
                <div class="form-group mt-2">
                    <label for="exampleFormControlSelect1">Site</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        {% for site in Sites %}
                            <option>{{site}}</option>
                        {% endfor %}

                    </select>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkOrganisateur">
                    <label class="form-check-label" for="checkOrganisateur">
                        Je suis organisateur/trice
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkInscrit">
                    <label class="form-check-label" for="checkInscrit">
                        Je suis inscrit/e
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkPasInscrit">
                    <label class="form-check-label" for="checkPasInscrit">
                        Je ne suis pas inscrit
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkPassées">
                    <label class="form-check-label" for="checkPassées">
                        Sorties passées
                    </label>
                </div>
                <span class="input-group-btn">
                    <button class="btn btn-secondary mt-2" type="submit">Filtrer</button>
                </span>
            </div>
        </div>
    </div>
{% endblock %}
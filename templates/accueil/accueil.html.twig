{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
        <div class="row mt-4">
            <!-- Post Content Column -->
            <div class="col-lg-9">
                <div class="row">
                    <!-- Title -->
                    <div class="col-md-4"><h1>Les sorties</h1></div>
                    <div class="col-md-2 offset-6"><button type="button" class="btn btn btn-light mt-3">Nouvelle sortie</button></div>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Etat
                        </th>
                        <th>
                            Nom
                        </th>
                        <th>
                            Horraire
                        </th>
                        <th>
                            Clôture
                        </th>
                        <th>
                            Places restantes
                        </th>
                        <th>
                            Inscrit
                        </th>
                        <th>
                            Organisateur
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for sortie in Sorties %}

                        <tr>
                            {{ include('/accueil/_gestionEtat.html.twig')}}

                            <td>
                                {{sortie.getNom()}}
                            </td>
                            <td>
                                {{sortie.getDatedebut().format('d/m/Y H:i')}}
                            </td>
                            <td>
                                {{sortie.getDatecloture().format('d/m/Y H:i')}}
                            </td>

                            {{ include('/accueil/_gestionNombreParticipation.html.twig')}}

                            {% if(app.user in sortie.getParticipantsNoParticipant) %}
                            <td>
                                X
                            </td>
                            {% else %}
                                <td>

                                </td>
                            {% endif %}

                            <td>
                                {{ sortie.getOrganisateur()}}
                            </td>
                            {{ include('/accueil/_gestionAction.html.twig')}}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-3">
                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Filtrer les sorties</h5>
                    <div class="card-body">
                        <div class="input-group mt-2">
                            <input type="text" class="form-control" placeholder="Le nom contient...">
                        </div>
                        <label class="mt-2">Entre</label>
                        <div class="input-group">
                            <input type="date" class="form-control">
                        </div>
                        <label class="mt-2">et</label>
                        <div class="input-group">
                            <input type="date" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleFormControlSelect1">Site</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkOrganisateur">
                            <label class="form-check-label" for="checkOrganisateur">
                                Je suis organisateur/trice
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkInscrit">
                            <label class="form-check-label" for="checkInscrit">
                                Je suis inscrit/e
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkPasInscrit">
                            <label class="form-check-label" for="checkPasInscrit">
                                Je ne suis pas inscrit
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkPassées">
                            <label class="form-check-label" for="checkPassées">
                                Sorties passées
                            </label>
                        </div>
                        <span class="input-group-btn">
                <button class="btn btn-secondary mt-2" type="button">Filtrer</button>
              </span>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.row -->
{% endblock %}
